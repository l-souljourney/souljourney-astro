---
const { headings } = Astro.props;

// 只获取 h3 级别的标题
const toc = headings?.filter((heading) => heading.depth === 3) || [];
---


{
  toc.length > 0 && (
    <aside class="toc-container">
      <h3>文章目录</h3>
      <nav class="toc">
        <ul>
          {toc.map((heading) => (
            <li class="toc-item">
              <a href={`#${heading.slug}`}>
                {heading.text}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </aside>
  )
}

<style lang="less">
  .toc-container {
    // 悬浮跟随效果
    position: sticky;
    top: 91px;
    z-index: 10;
    transition: top 0.3s;
    
    // 固定宽度
    flex-shrink: 0;
    width: 260px;
    // 移除固定高度，根据内容自动调整
    height: fit-content;
    
    // 继承侧边栏样式
    box-sizing: border-box;
    padding: 1.28rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    border-radius: var(--vh-main-radius);
    background-color: var(--vh-white-color);
    box-shadow: var(--vh-box-shadow);
    overflow: visible;
    
    // 左侧间距调整，与 Aside 保持一致
    margin-left: 0.66rem;
    // 顶部对齐调整 - 与文章内容对齐
    margin-top: 0;

    h3 {
      width: 100%;
      font-size: 0.68rem;
      font-weight: 400;
      color: var(--vh-font-56);
      margin: 0;
    }

    .toc {
      box-sizing: border-box;
      // 移除固定高度，让内容决定高度
      height: auto;
      overflow: visible;
      
      // 自定义滚动条
      &::-webkit-scrollbar {
        width: 4px;
      }
      
      &::-webkit-scrollbar-thumb {
        background: var(--vh-main-color-28);
        border-radius: 2px;
      }

      ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .toc-item {
        margin-bottom: 0.4rem;
        line-height: 1.5;

        a {
          display: block;
          color: var(--vh-font-66);
          text-decoration: none;
          transition: color 0.3s;
          padding: 6px 0;
          font-size: 0.9rem;

          &:hover {
            color: var(--vh-main-color);
          }
          
          // 高亮当前章节 - 只改变文字颜色
          &.active {
            color: var(--vh-main-color);
            font-weight: 500;
          }
        }
      }
    }
  }

  // 响应式：屏幕宽度小于 1400px 时隐藏 TOC
  @media screen and (max-width: 1400px) {
    .toc-container {
      display: none;
    }
  }
</style>

<script>
  // 滚动高亮功能
  function initTocHighlight() {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          const id = entry.target.getAttribute('id');
          const tocLink = document.querySelector(`.toc a[href="#${id}"]`);
          
          if (entry.isIntersecting) {
            // 移除所有 active 类
            document.querySelectorAll('.toc a').forEach(link => {
              link.classList.remove('active');
            });
            // 添加 active 类到当前项
            if (tocLink) {
              tocLink.classList.add('active');
            }
          }
        });
      },
      {
        rootMargin: '-100px 0px -66%',
        threshold: 0
      }
    );

    // 监听所有标题元素
    document.querySelectorAll('article h2, article h3, article h4').forEach((heading) => {
      observer.observe(heading);
    });
  }

  // 页面加载时初始化
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTocHighlight);
  } else {
    initTocHighlight();
  }

  // Swup 页面切换后重新初始化
  document.addEventListener('swup:contentReplaced', initTocHighlight);
</script>
